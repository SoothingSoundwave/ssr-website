# .env.example
# Path: /.env.example
# Copy this file to .env.local and fill in your actual values

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Spotify API
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_ARTIST_ID=your-artist-id-here
SPOTIFY_USER_ID=your-user-id-here

# YouTube API
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CHANNEL_ID=your-channel-id

# Resend API (for emails)
RESEND_API_KEY=re_your-resend-api-key

# Admin Authentication (MVP)
ADMIN_PASSWORD=your-secure-password-here

# Email Addresses
CONTACT_EMAIL=contact@soothingsoundwave.com
VINYL_EMAIL=vinyl@soothingsoundwave.com
NEWSLETTER_EMAIL=newsletter@soothingsoundwave.com

# Site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000